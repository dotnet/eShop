# eShop E2E Test Configuration

# Application URL
BASE_URL=http://localhost:5045

# Test User Credentials
USERNAME1=alice
PASSWORD=Pass123$

# Test Environment
TEST_ENV=local

# Browser Configuration
HEADLESS=false
SLOW_MO=0
RECORD_VIDEO=false

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=10000

# CI/CD Configuration
CI=false

# ============================================
# ReportPortal Configuration
# ============================================

# Authentication - API Key (Required)
# Get your API key from ReportPortal profile page
RP_API_KEY=your-reportportal-api-key-here
RP_TOKEN=your-reportportal-api-key-here

# ReportPortal Server (Required)
RP_ENDPOINT=https://reportportal.yourcompany.com/api/v2
RP_PROJECT=eShop

# Launch Configuration
RP_LAUNCH=eShop E2E Tests - Local
RP_LAUNCH_DESCRIPTION=End-to-end tests for eShop microservices application

# Execution Mode
# DEFAULT - Results go to Launches page
# DEBUG - Results go to Debug page (for development)
RP_MODE=DEBUG

# ReportPortal Features
RP_SKIPPED_ISSUE=true
RP_SCENARIO_BASED_STATS=false
RP_DEBUG=false
RP_LAUNCH_UUID_PRINT=false
RP_LAUNCH_UUID_PRINT_OUTPUT=STDOUT

# ReportPortal Rerun
RP_RERUN=false
# RP_RERUN_OF=uuid-of-launch-to-rerun

# ReportPortal Attributes (JSON array)
# RP_ATTRIBUTES=[{"key":"team","value":"qa"},{"key":"sprint","value":"1"}]

# ReportPortal HTTP Client
RP_TIMEOUT=30000

# ============================================
# ReportPortal OAuth 2.0 (Alternative to API Key)
# ============================================
# Uncomment and configure if using OAuth instead of API key

# RP_OAUTH_TOKEN_ENDPOINT=https://auth.yourcompany.com/oauth/token
# RP_OAUTH_USERNAME=your-username
# RP_OAUTH_PASSWORD=your-password
# RP_OAUTH_CLIENT_ID=your-client-id
# RP_OAUTH_CLIENT_SECRET=your-client-secret
# RP_OAUTH_SCOPE=openid profile

# ============================================
# ReportPortal Proxy (if needed)
# ============================================

# RP_PROXY_HOST=proxy.yourcompany.com
# RP_PROXY_PORT=8080
# RP_PROXY_PROTOCOL=http
